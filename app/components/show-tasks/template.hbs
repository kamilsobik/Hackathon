<div class='container mt-5'>
  <div class='input-group mb-3'>
    <input
      type='text'
      class='form-floating'
      placeholder='Enter new task'
      aria-label='Enter new task'
      aria-describedby='basic-addon1'
      value={{this.newTask}}
      {{on 'input' this.onDescriptionChange}}
    />
    <button
      class='btn btn-success'
      type='button'
      {{on 'click' this.addNewTask}}
    >Button</button>
  </div>
</div>

<div class='container mt-5'>
  <table class='table table-striped'>
    <thead class='table-active'>
      <tr>
        <th scope='col'>ID</th>
        <th scope='col'>Descriptaion</th>
        <th scope='col'>Created date</th>
        <th scope='col'>Done</th>
        <th scope='col'>Button</th>
      </tr>
    </thead>
    <tbody>
      {{#each @tasks as |task|}}
        <tr class={{class-table task.isDone}}>
          <td>{{task.id}}</td>
          <td>{{task.description}}</td>
          <td>{{moment-format task.createdAt 'DD-MM-YYYY'}}</td>
          <td><div class='form-check'>
              {{#if task.isDone}}
                <input
                  id='flexCheckDefault'
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  checked={{task.isDone}}
                  {{on 'click' (fn this.onIsDone task)}}
                />
              {{else}}
                <input
                  id='flexCheckDefault'
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  checked={{task.isDone}}
                  {{on 'click' (fn this.onIsDone task)}}
                />
              {{/if}}
            </div></td>
          <td><button
              type='button'
              class='btn btn-danger'
              {{on 'click' this.onDeleteTask}}
            >Delete</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>