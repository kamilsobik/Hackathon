<div class='container'>
  <h1>Hackathon</h1>
  <h3>ToDoList API</h3>
</div>

<div class='container'>
  <table class='table table-striped'>
    <thead class='table-active'>
      <tr>
        <th scope='col'>ID</th>
        <th scope='col'>Descriptaion</th>
        <th scope='col'>isDone</th>
        <th scope='col'>Created date</th>
        <th scope='col'>Updated date</th>
        <th scope='col'>Done</th>
        <th scope='col'>Button</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td></td>
        <td><input
            type='text'
            class='form-control'
            placeholder='Description'
            aria-label='Username'
            aria-describedby='basic-addon1'
            value={{this.newTask}}
            {{on 'input' this.onDescriptionChange}}
          />
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><button
            type='button'
            class='btn btn-success'
            {{on 'click' this.addNewTask}}
          >Add</button></td>
      </tr>
      {{#each @tasks as |task|}}
        <tr>
          <td>{{task.id}}</td>
          <td>{{task.description}}</td>
          <td>{{task.isDone}}</td>
          <td>{{moment-format task.createdAt 'DD-MM-YYYY  HH:mm:ss'}}</td>
          <td>{{moment-format task.updatedAt 'DD-MM-YYYY  HH:mm:ss'}}</td>
          <td><div class='form-check'>
              {{#if task.isDone}}
                <input
                  id='flexCheckDefault'
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  checked={{task.isDone}}
                  {{on 'click' (fn this.onIsDone task)}}
                  disabled
                />
              {{else}}
                <input
                  id='flexCheckDefault'
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  checked={{task.isDone}}
                  {{on 'click' (fn this.onIsDone task)}}
                />
              {{/if}}
            </div></td>
          <td><button
              type='button'
              class='btn btn-danger'
              {{on 'click' this.onDeleteTask}}
            >Delete</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>